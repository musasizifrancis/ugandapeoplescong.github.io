<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Membership - Uganda People's Congress (UPC)</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Reset and base styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, Helvetica, sans-serif;
        }

        body {
            background-color: #f5f5f5;
            color: #333;
            line-height: 1.6;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        img {
            max-width: 100%;
            height: auto;
        }

        a {
            text-decoration: none;
        }

        .btn {
            display: inline-block;
            padding: 8px 24px;
            font-weight: bold;
            text-align: center;
            cursor: pointer;
            border: none;
            transition: background-color 0.3s;
        }

        .btn-red {
            background-color: #f44336;
            color: white;
        }

        .btn-red:hover {
            background-color: #d32f2f;
        }

        .btn-blue {
            background-color: #3f51b5;
            color: white;
        }

        .btn-blue:hover {
            background-color: #303f9f;
        }

        /* Header styles */
        header {
            background-color: #3f51b5;
            color: white;
            padding: 10px 0;
            position: relative;
            z-index: 1000; /* Ensure header is above other elements */
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            display: flex;
            align-items: center;
        }

        .logo img {
            height: 70px;
        }

        /* Enhanced Navigation Styles */
        .nav-toggle {
            display: none;
            background: none;
            border: none;
            color: white;
            font-size: 24px;
            cursor: pointer;
        }

        .main-nav {
            display: flex;
        }

        .main-nav ul {
            display: flex;
            list-style: none;
        }

        .main-nav li {
            position: relative;
        }

        .main-nav a {
            display: block;
            color: white;
            font-weight: bold;
            padding: 15px;
            transition: background-color 0.3s;
        }

        .main-nav a:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .main-nav a.active {
            background-color: #f44336;
        }

        /* Dropdown styles */
        .dropdown {
            position: relative;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #3f51b5;
            min-width: 200px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            z-index: 1;
        }

        .dropdown-content a {
            padding: 12px 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .dropdown-content a:last-child {
            border-bottom: none;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown > a::after {
            content: " ▼";
            font-size: 10px;
            margin-left: 5px;
        }

        /* Page Title Section */
        .page-title {
            background-color: #3f51b5;
            color: white;
            padding: 40px 0;
            text-align: center;
            position: relative;
        }

        .page-title::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 10px;
            background-color: #f44336;
        }

        .page-title h1 {
            font-size: 36px;
            margin-bottom: 10px;
        }

        .page-title p {
            font-size: 18px;
            max-width: 800px;
            margin: 0 auto;
        }

        /* Content Section */
        .content-section {
            padding: 60px 0;
            background-color: white;
        }

        /* Form Styles */
        .form-container {
            max-width: 800px;
            margin: 0 auto;
            background-color: #f5f5f5;
            padding: 30px;
            border-radius: 5px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .form-title {
            color: #3f51b5;
            margin-bottom: 20px;
            font-size: 24px;
            border-bottom: 2px solid #f44336;
            padding-bottom: 10px;
        }

        .form-description {
            margin-bottom: 30px;
            color: #666;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #333;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
            transition: border-color 0.3s;
        }

        .form-control:focus {
            border-color: #3f51b5;
            outline: none;
        }

        .form-row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-col {
            flex: 1;
            min-width: 250px;
        }

        .form-check {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .form-check input {
            margin-right: 10px;
        }

        .form-submit {
            background-color: #f44336;
            color: white;
            border: none;
            padding: 12px 25px;
            font-size: 16px;
            font-weight: bold;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .form-submit:hover {
            background-color: #d32f2f;
        }

        /* Footer section */
        .footer {
            padding: 40px 0;
            background-color: #3f51b5;
            color: white;
        }

        .footer-content {
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
        }

        .footer-column {
            flex: 1;
            min-width: 250px;
        }

        .footer-column h3 {
            font-size: 18px;
            margin-bottom: 20px;
            border-bottom: 2px solid #f44336;
            padding-bottom: 10px;
        }

        .footer-column ul {
            list-style: none;
        }

        .footer-column ul li {
            margin-bottom: 10px;
        }

        .footer-column a {
            color: white;
            transition: color 0.3s;
        }

        .footer-column a:hover {
            color: #f44336;
        }

        .copyright {
            text-align: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        /* Responsive styles */
        @media (max-width: 768px) {
            .nav-toggle {
                display: block;
            }

            .main-nav {
                display: none;
                position: absolute;
                top: 100%;
                left: 0;
                width: 100%;
                background-color: #3f51b5;
                flex-direction: column;
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }

            .main-nav.active {
                display: block;
            }

            .main-nav ul {
                flex-direction: column;
                width: 100%;
            }

            .main-nav li {
                width: 100%;
            }

            .dropdown-content {
                position: static;
                box-shadow: none;
                background-color: #303f9f;
                display: none;
            }

            .dropdown.active .dropdown-content {
                display: block;
            }

            .dropdown > a::after {
                float: right;
            }

            .page-title h1 {
                font-size: 28px;
            }

            .page-title p {
                font-size: 16px;
            }

            .form-row {
                flex-direction: column;
                gap: 0;
            }

            .footer-content {
                flex-direction: column;
            }
        }
    </style>
  </head>
  <body>
    <!-- Header with Navigation -->
    <header>
      <div class="container">
        <div class="header-content">
          <div class="logo"> <img src="images/ppc.png" alt="UPC Logo"> </div>
          <button class="nav-toggle" id="navToggle"> <i class="fas fa-bars"></i>
          </button>
          <nav class="main-nav" id="mainNav">
            <ul>
              <li><a href="index.html">HOME</a></li>
              <li class="dropdown"> <a href="#">ABOUT</a>
                <div class="dropdown-content"> <a href="#">Party History</a> <a
                    href="leadership.html">Leadership</a> <a href="#">Constitution</a>
                  <a href="#">Achievements</a> </div>
              </li>
              <li class="dropdown"> <a href="#">CURRENT</a>
                <div class="dropdown-content"> <a href="news.html">News &amp;
                    Events</a> <a href="#">Press Releases</a> <a href="#">Campaigns</a>
                  <a href="#">Statements</a> </div>
              </li>
              <li class="dropdown"> <a href="#">HISTORY</a>
                <div class="dropdown-content"> <a href="#">Founding</a> <a href="#">Past
                    Leaders</a> <a href="#">Historical Timeline</a> <a href="gallery.html">Photo
                    Gallery</a> </div>
              </li>
              <li><a href="membership.html" class="active">MEMBERSHIP</a></li>
              <li><a href="contact.html">CONTACT</a></li>
              <li><a href="donate.html">DONATE</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    <!-- Page Title Section -->
    <section class="page-title">
      <div class="container">
        <h1>JOIN UPC</h1>
        <p>Become a member of the Uganda People's Congress and be part of our
          vision for a better Uganda.</p>
      </div>
    </section>
    <!-- Membership Form Section -->
    <section class="content-section">
      <div class="container">
        <div class="form-container">
          <h2 class="form-title">Membership Registration Form</h2>
          <p class="form-description">Fill out the form below to register as a
            member of the Uganda People's Congress. Your information will be
            kept confidential and used only for party communication purposes.</p>
          <form action="#" method="POST" id="membershipForm">
            <div class="form-row">
              <div class="form-col">
                <div class="form-group"> <label for="firstName">First Name*</label>
                  <input id="firstName" name="firstName" class="form-control" required=""
                    type="text"> </div>
              </div>
              <div class="form-col">
                <div class="form-group"> <label for="lastName">Last Name*</label>
                  <input id="lastName" name="lastName" class="form-control" required=""
                    type="text"> </div>
              </div>
            </div>
            <div class="form-row">
              <div class="form-col">
                <div class="form-group"> <label for="email">Email Address*</label>
                  <input id="email" name="email" class="form-control" required=""
                    type="email"> </div>
              </div>
              <div class="form-col">
                <div class="form-group"> <label for="phone">Phone Number*</label>
                  <input id="phone" name="phone" class="form-control" required=""
                    type="tel"> </div>
              </div>
            </div>
            <div class="form-row">
              <div class="form-col">
                <div class="form-group"> <label for="dob">Date of Birth*</label>
                  <input id="dob" name="dob" class="form-control" required="" type="date">
                </div>
              </div>
              <div class="form-col">
                <div class="form-group"> <label for="gender">Gender*</label>
                  <select id="gender" name="gender" class="form-control" required="">
                    <option value="">Select Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="form-group"> <label for="address">Residential Address*</label>
              <input id="address" name="address" class="form-control" required=""
                type="text"> </div>
            <div class="form-row">
              <div class="form-col">
                <div class="form-group"> <label for="district">District*</label>
                  <input id="district" name="district" class="form-control" required=""
                    type="text"> </div>
              </div>
              <div class="form-col">
                <div class="form-group"> <label for="constituency">Constituency*</label>
                  <input id="constituency" name="constituency" class="form-control"
                    required="" type="text"> </div>
              </div>
            </div>
            <div class="form-group"> <label for="occupation">Occupation</label>
              <input id="occupation" name="occupation" class="form-control" type="text">
            </div>
            <div class="form-group"> <label>Areas of Interest (Select all that
                apply)</label>
              <div class="form-check"> <input id="campaigning" name="interests[]"
                  value="campaigning" type="checkbox"> <label for="campaigning">Campaigning</label>
              </div>
              <div class="form-check"> <input id="policy" name="interests[]" value="policy"
                  type="checkbox"> <label for="policy">Policy Development</label>
              </div>
              <div class="form-check"> <input id="fundraising" name="interests[]"
                  value="fundraising" type="checkbox"> <label for="fundraising">Fundraising</label>
              </div>
              <div class="form-check"> <input id="community" name="interests[]"
                  value="community" type="checkbox"> <label for="community">Community
                  Outreach</label> </div>
              <div class="form-check"> <input id="youth" name="interests[]" value="youth"
                  type="checkbox"> <label for="youth">Youth Programs</label> </div>
            </div>
            <div class="form-group">
              <div class="form-check"> <input id="terms" name="terms" required=""
                  type="checkbox"> <label for="terms">I agree to the <a href="#"
                    style="color: #3f51b5;">terms and conditions</a> and consent
                  to the processing of my personal data in accordance with the
                  UPC privacy policy.</label> </div>
            </div>
            <div class="form-group" style="text-align: center; margin-top: 30px;">
              <button type="submit" class="form-submit">Submit Registration</button>
            </div>
          </form>
        </div>
      </div>
    </section>
    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-column">
            <h3>Quick Links</h3>
            <ul>
              <li><a href="index.html">Home</a></li>
              <li><a href="leadership.html">Leadership</a></li>
              <li><a href="news.html">News &amp; Events</a></li>
              <li><a href="gallery.html">Photo Gallery</a></li>
              <li><a href="membership.html">Membership</a></li>
              <li><a href="donate.html">Donate</a></li>
              <li><a href="contact.html">Contact Us</a></li>
            </ul>
          </div>
          <div class="footer-column">
            <h3>Resources</h3>
            <ul>
              <li><a href="#">Party Constitution</a></li>
              <li><a href="#">Press Releases</a></li>
              <li><a href="#">Manifesto</a></li>
              <li><a href="#">Downloads</a></li>
            </ul>
          </div>
          <div class="footer-column">
            <h3>Contact Information</h3>
            <ul>
              <li><i class="fas fa-map-marker-alt"></i> Uganda House, 6th Floor,
                Kampala</li>
              <li><i class="fas fa-phone-alt"></i> +256 414 123 456</li>
              <li><i class="fas fa-envelope"></i> info@upc.co.ug</li>
            </ul>
          </div>
        </div>
        <div class="copyright">
          <p>© 2023 Uganda People's Congress (UPC). All Rights Reserved.</p>
        </div>
      </div>
    </footer>
    <!-- JavaScript for Mobile Navigation -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const navToggle = document.getElementById('navToggle');
            const mainNav = document.getElementById('mainNav');
            const dropdowns = document.querySelectorAll('.dropdown');

            // Toggle mobile menu
            navToggle.addEventListener('click', function() {
                mainNav.classList.toggle('active');
            });

            // Handle dropdowns on mobile
            if (window.innerWidth <= 768) {
                dropdowns.forEach(dropdown => {
                    const link = dropdown.querySelector('a');
                    link.addEventListener('click', function(e) {
                        if (window.innerWidth <= 768) {
                            e.preventDefault();
                            dropdown.classList.toggle('active');
                        }
                    });
                });
            }

            // Close menu when clicking outside
            document.addEventListener('click', function(e) {
                if (!mainNav.contains(e.target) && e.target !== navToggle) {
                    mainNav.classList.remove('active');
                    dropdowns.forEach(dropdown => {
                        dropdown.classList.remove('active');
                    });
                }
            });

            // Form submission handling
            const membershipForm = document.getElementById('membershipForm');
            if (membershipForm) {
                membershipForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    alert('Thank you for your registration! Your membership application has been submitted successfully.');
                    membershipForm.reset();
                });
            }
        });
    </script>
  </body>
</html>
