    <title>Contact Us - Uganda People's Congress (UPC)</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Reset and base styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, Helvetica, sans-serif;
        }

        body {
            background-color: #f5f5f5;
            color: #333;
            line-height: 1.6;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        img {
            max-width: 100%;
            height: auto;
        }

        a {
            text-decoration: none;
        }

        .btn {
            display: inline-block;
            padding: 8px 24px;
            font-weight: bold;
            text-align: center;
            cursor: pointer;
            border: none;
            transition: background-color 0.3s;
        }

        .btn-red {
            background-color: #f44336;
            color: white;
        }

        .btn-red:hover {
            background-color: #d32f2f;
        }

        .btn-blue {
            background-color: #3f51b5;
            color: white;
        }

        .btn-blue:hover {
            background-color: #303f9f;
        }

        /* Header styles */
        header {
            background-color: #3f51b5;
            color: white;
            padding: 10px 0;
            position: relative;
            z-index: 1000; /* Ensure header is above other elements */
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            display: flex;
            align-items: center;
        }

        .logo img {
            height: 70px;
        }

        /* Enhanced Navigation Styles */
        .nav-toggle {
            display: none;
            background: none;
            border: none;
            color: white;
            font-size: 24px;
            cursor: pointer;
        }

        .main-nav {
            display: flex;
        }

        .main-nav ul {
            display: flex;
            list-style: none;
        }

        .main-nav li {
            position: relative;
        }

        .main-nav a {
            display: block;
            color: white;
            font-weight: bold;
            padding: 15px;
            transition: background-color 0.3s;
        }

        .main-nav a:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .main-nav a.active {
            background-color: #f44336;
        }

        /* Dropdown styles */
        .dropdown {
            position: relative;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #3f51b5;
            min-width: 200px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            z-index: 1;
        }

        .dropdown-content a {
            padding: 12px 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .dropdown-content a:last-child {
            border-bottom: none;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown > a::after {
            content: " ▼";
            font-size: 10px;
            margin-left: 5px;
        }

        /* Page Title Section */
        .page-title {
            background-color: #3f51b5;
            color: white;
            padding: 40px 0;
            text-align: center;
            position: relative;
        }

        .page-title::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 10px;
            background-color: #f44336;
        }

        .page-title h1 {
            font-size: 36px;
            margin-bottom: 10px;
        }

        .page-title p {
            font-size: 18px;
            max-width: 800px;
            margin: 0 auto;
        }

        /* Contact Section */
        .contact-section {
            padding: 60px 0;
            background-color: white;
        }

        .contact-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
        }

        .contact-info {
            flex: 1;
            min-width: 300px;
        }

        .contact-form {
            flex: 1;
            min-width: 300px;
        }

        .contact-card {
            background-color: #f5f5f5;
            border-radius: 5px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .contact-card h3 {
            color: #3f51b5;
            margin-bottom: 20px;
            font-size: 20px;
            border-bottom: 2px solid #f44336;
            padding-bottom: 10px;
        }

        .contact-item {
            display: flex;
            margin-bottom: 15px;
            align-items: flex-start;
        }

        .contact-icon {
            color: #f44336;
            font-size: 20px;
            margin-right: 15px;
            min-width: 25px;
            text-align: center;
        }

        .contact-text {
            flex: 1;
        }

        .contact-text h4 {
            margin-bottom: 5px;
            color: #333;
        }

        .contact-text p, .contact-text a {
            color: #666;
        }

        .contact-text a:hover {
            color: #f44336;
            text-decoration: underline;
        }

        .social-icons {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

        .social-icons a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background-color: #3f51b5;
            color: white;
            border-radius: 50%;
            transition: all 0.3s;
        }

        .social-icons a:hover {
            background-color: #f44336;
            transform: translateY(-3px);
        }

        /* Form Styles */
        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #333;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
            transition: border-color 0.3s;
        }

        .form-control:focus {
            border-color: #3f51b5;
            outline: none;
        }

        textarea.form-control {
