        }

        .btn-blue {
            background-color: #3f51b5;
            color: white;
        }

        .btn-blue:hover {
            background-color: #303f9f;
        }

        /* Header styles */
        header {
            background-color: #3f51b5;
            color: white;
            padding: 10px 0;
            position: relative;
            z-index: 1000; /* Ensure header is above other elements */
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            display: flex;
            align-items: center;
        }

        .logo img {
            height: 70px;
        }

        /* Enhanced Navigation Styles */
        .nav-toggle {
            display: none;
            background: none;
            border: none;
            color: white;
            font-size: 24px;
            cursor: pointer;
        }

        .main-nav {
            display: flex;
        }

        .main-nav ul {
            display: flex;
            list-style: none;
        }

        .main-nav li {
            position: relative;
        }

        .main-nav a {
            display: block;
            color: white;
            font-weight: bold;
            padding: 15px;
            transition: background-color 0.3s;
        }

        .main-nav a:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .main-nav a.active {
            background-color: #f44336;
        }

        /* Dropdown styles */
        .dropdown {
            position: relative;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #3f51b5;
            min-width: 200px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            z-index: 1;
        }

        .dropdown-content a {
            padding: 12px 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .dropdown-content a:last-child {
            border-bottom: none;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown > a::after {
            content: " â–¼";
            font-size: 10px;
            margin-left: 5px;
        }

        /* Page Title Section */
        .page-title {
            background-color: #3f51b5;
            color: white;
            padding: 40px 0;
            text-align: center;
            position: relative;
        }

        .page-title::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 10px;
            background-color: #f44336;
        }

        .page-title h1 {
            font-size: 36px;
            margin-bottom: 10px;
        }

        .page-title p {
            font-size: 18px;
            max-width: 800px;
            margin: 0 auto;
        }

        /* News Section */
        .news-section {
            padding: 60px 0;
            background-color: white;
        }

        .news-filters {
            display: flex;
            justify-content: center;
            margin-bottom: 40px;
            flex-wrap: wrap;
            gap: 10px;
        }

        .filter-btn {
            background-color: #f5f5f5;
            color: #333;
            border: none;
            padding: 8px 20px;
            border-radius: 30px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .filter-btn.active, .filter-btn:hover {
            background-color: #3f51b5;
            color: white;
        }

        .news-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 30px;
        }

        .news-card {
